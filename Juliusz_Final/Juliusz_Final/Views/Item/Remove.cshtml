@model Juliusz_Final.Models.Item

<div align="center">
    <nav style="padding: 7px" class="bg-dark text-white">
        <a class="navbar-brand">Usuwanie użytkownika</a>
    </nav>
</div>

<div style="margin: 10%; margin-top: 10px">
    <div class="row">
        <div class="col">
            <div class="float-left">
                <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Home", FormMethod.Get)" class="btn btn-primary">Strona główna</a>
            </div>
            <div class="float-right">
                <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Item", FormMethod.Get)" class="btn bg-warning">Powrót</a>
            </div>
        </div>
    </div>
    <h3>Czy chcesz usunąć ten produkt?</h3>
    <div style="width: 50%">
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Kategoria</th>
                <th>Rozmiar</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(x => x.ID)</td>
                <td>@Html.DisplayFor(x => x.Model)</td>
                <td>@Html.DisplayFor(x => x.Category.Type)</td>
                <td>@Html.DisplayFor(x => x.Size)</td>
            </tr>
        </table>
        @using (Html.BeginForm("ConfirmRemove", "Item", new { id = Model.ID }, FormMethod.Post))
        {
            <button style="padding: 15px; padding-left: 30%; padding-right: 30%" class="btn btn-danger">Usuń</button>
        }
    </div></div>
