@model IEnumerable<Juliusz_Final.Models.Item>

<div align="center">
    <nav style="padding: 7px" class="bg-dark text-white">
        <a class="navbar-brand">Produkty</a>
    </nav>
</div>

<div style="margin: 10%; margin-top: 10px">
    <div class="float-left">
        <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Home", FormMethod.Get)" class="btn btn-primary">Strona główna</a>
    </div>
    <div class="float-right">
        <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Add", "Item", FormMethod.Get)" cla class="btn bg-warning">Dodaj Produkt</a>
    </div>

    <table class="table table-hover">
        <tr>
            <th>Nr</th>
            <th>Kategoria</th>
            <th>Model</th>
            <th>Wartość</th>
            <th>Stan</th>
            <th>Rozmiar</th>
            <th>Opcje</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.ID)</td>
                <td>@Html.DisplayFor(x => item.Category.Type)</td>
                <td>@Html.DisplayFor(x => item.Model)</td>
                <td>@Html.DisplayFor(x => item.Value)</td>
                <td>@Html.DisplayFor(x => item.Condition)</td>
                <td>@Html.DisplayFor(x => item.Size)</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("Edit", new {id = item.ID})">Edytuj</a>
                    <a class="btn btn-primary" href="@Url.Action("Remove", new {id = item.ID})">Usuń</a>
                </td>
            </tr>
        }
    </table>
</div>