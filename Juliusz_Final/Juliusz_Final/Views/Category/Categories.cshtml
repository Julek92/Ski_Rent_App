@model IEnumerable<Juliusz_Final.Models.Category>

<div align="center">
    <nav style="padding: 7px" class="bg-dark text-white">
        <a class="navbar-brand">Kategorie</a>
    </nav>
</div>

<div style="margin: 10%; margin-top: 10px">
    <div class="float-left">
        <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Home", FormMethod.Get)" class="btn btn-primary">Strona główna</a>
    </div>
    <div class="float-right">
        <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Add", "Category", FormMethod.Get)" cla class="btn bg-warning">Dodaj Kategorię</a>
    </div>

    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Typ</th>
            <th>Dzielnik</th>
            <th>Ilość produktów</th>
            <th>Opcje</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.ID)</td>
                <td>@Html.DisplayFor(x => item.Type)</td>
                <td>@Html.DisplayFor(x => item.RentDivider)</td>
                <td>@item.Items.Count()</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("ShowSelected", "Item", new {id = item.ID})">Wyświetl wszystkie</a>
                    <a class="btn btn-primary" href="@Url.Action("Edit", new {id = item.ID})">Edytuj</a>
                    <a class="btn btn-primary" href="@Url.Action("Remove", new {id = item.ID})">Usuń</a>
                </td>
            </tr>
        }
    </table>
    </div>