
<div align="center">
    <nav style="padding: 7px" class="bg-dark text-white">
        <a class="navbar-brand">Nowe wypożyczenie</a>
    </nav>
</div>

@model Juliusz_Final.Models.Rent

<div class="row">
    <div class="col">
        <div class="float-left">
            <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Home", FormMethod.Get)" class="btn btn-primary">Strona główna</a>
        </div>
        <div class="float-right">
            <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Rent", FormMethod.Get)" class="btn btn-primary">Powrót</a>
        </div>
    </div>
</div>

@using (Html.BeginForm("Edit", "Rent", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(x => x.ID)
        <div>
            @Html.TextBoxFor(x => x.ID, new { disabled = "" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ItemId)
        <div>
            @Html.TextBoxFor(x => x.ItemId)
        </div>
    </div>




    <button class="btn btn-primary">Confirm</button>
}
@Html.ValidationSummary()