@model Juliusz_Final.Models.Rent

<div align="center">
    <nav style="padding: 7px" class="bg-dark text-white">
        <a class="navbar-brand">Zwrot produktu</a>
    </nav>
</div>

<div class="bg-light" style="margin: 10%; margin-top: 10px">
    <div class="row">
        <div class="col">
            <div class="float-left">
                <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Home", FormMethod.Get)" class="btn btn-primary">Strona główna</a>
            </div>
            <div class="float-right">
                <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Rent", FormMethod.Get)" class="btn bg-warning">Powrót</a>
            </div>
        </div>
    </div>
    <h3>Czy chcesz potwierdzić zwrot produktu?</h3>

    <div style="width: 50%">
        <table class="table table-hover">
            <tr>
                <th>Klient</th>
                <th>Typ</th>
                <th>Model</th>
                <th>ID</th>
            </tr>
            <tr>
                <td>@Html.DisplayFor(x => x.Customer.Name)</td>
                <td>@Html.DisplayFor(x => x.Item.Category.Type)</td>
                <td>@Html.DisplayFor(x => x.Item.Model)</td>
                <td>@Html.DisplayFor(x => x.Item.ID)</td>
            </tr>
        </table>
        @using (Html.BeginForm("ConfirmReturnProduct", "Rent", new { id = Model.ID }, FormMethod.Post))
        {
            <button style="padding: 15px; padding-left: 30%; padding-right: 30%" class="btn btn-danger">Potwierdź</button>
        }
    </div></div>
