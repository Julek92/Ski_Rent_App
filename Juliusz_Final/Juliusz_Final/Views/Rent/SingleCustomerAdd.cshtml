@using Juliusz_Final.Models
@model Juliusz_Final.Models.Rent

<div align="center">
    <nav style="padding: 7px" class="bg-dark text-white">
        <a class="navbar-brand">Nowe wypożyczenie</a>
    </nav>
</div>

<div style="margin: 10%; margin-top: 10px">
    <div class="row">
        <div class="col">
            <div class="float-left">
                <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Home", FormMethod.Get)" class="btn btn-primary">Strona główna</a>
            </div>
            <div class="float-right">
                <a style="margin: 5px; padding: 10px; padding-left: 50px; padding-right: 50px" href="@Url.Action("Index", "Rent", FormMethod.Get)" class="btn bg-warning">Powrót</a>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("SingleCustomerAdd", "Rent", FormMethod.Post))
    {
        var customer = (Customer) ViewBag.customer;
        int customerid = customer.ID;
        <div class="form-group">
            <p>
            @Html.Label("Użytkownik: \n")
            @Html.Label($"{customer.Name}, id: {customer.ID}")
            </p>
            <div>
                @Html.Hidden("idCustomer", customerid)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Wybierz produkt: ")
            <div>
                @Html.DropDownListFor(x => x.ItemId, (IEnumerable<SelectListItem>)ViewBag.ItemsList)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Wybierz czas wynajmu w godzinach: ")
            <div>
                @Html.TextBox("rentTime")
            </div>
        </div>

        <button class="btn btn-primary">Potwierdź</button>
    }
    @Html.ValidationSummary()
</div>
